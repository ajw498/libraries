srcdir = @srcdir@
VPATH = @srcdir@

NONPORTABLE = \
	testshm@EXEEXT@ \
	testprocmutex@EXEEXT@ \
	testglobalmutex@EXEEXT@ \

PROGRAMS = \
	client@EXEEXT@ \
	sendfile@EXEEXT@ \
	server@EXEEXT@ \
	testfile@EXEEXT@ \
	testdir@EXEEXT@ \
	testnames@EXEEXT@ \
	testflock@EXEEXT@ \
	testproc@EXEEXT@ \
	testsock@EXEEXT@ \
	testthread@EXEEXT@ \
	testlock@EXEEXT@ \
	testlockperf@EXEEXT@ \
	testargs@EXEEXT@ \
	testshmproducer@EXEEXT@ \
	testshmconsumer@EXEEXT@ \
	testpipe@EXEEXT@ \
	testoc@EXEEXT@ \
	testsockopt@EXEEXT@ \
	testpoll@EXEEXT@ \
	testhash@EXEEXT@ \
